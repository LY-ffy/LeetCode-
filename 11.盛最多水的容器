//  the fist edition :暴力解法
int maxArea(int* height, int heightSize) {
    int i,area=0,max_area=0;
    for(i=0;i<heightSize;i++){
        for(int j=i+1;j<heightSize;j++){
            int Height=fmin(height[i],height[j]);
            area=Height*(j-i);
            max_area=(max_area>area) ? max_area : area;
        }
    }
    return max_area;
}
// the second edition :双指针法，贪心算法；
int maxArea(int* height, int heightSize) {
    int left=0,right =heightSize-1,area=0,max_area=0;
    for(;left<right;){
        int Height=fmin(height[right],height[left]);
        area=Height*(right-left);
        max_area=((max_area > area) ? max_area : area);
        if(height[right]>height[left]){
            left+=1;
        }
        else{
            right-=1;
        }
    }
    return max_area;
}
