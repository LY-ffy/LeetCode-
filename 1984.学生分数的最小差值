  int minimumDifference(int* nums, int numsSize, int k) {
    for(int i=0;i<numsSize;i++){
        int a=i;
        for(int j=i;j<numsSize;j++){
            if(nums[a]>nums[j]){
                a=j;
            }
        }
        if(a!=i){
            int temp=nums[a];
            nums[a]=nums[i];
            nums[i]=temp;
        }
    }
    if(k>=numsSize){
        return nums[numsSize-1]-nums[0];
    }
    int min_grade=nums[k-1]-nums[0];
    for(int i=1;i<numsSize-k+1;i++){
        int temp=nums[i+k-1]-nums[i];
        if(temp<min_grade){
            min_grade=temp;
        }
    }
    return min_grade;
}
